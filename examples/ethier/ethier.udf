  if (ciMode == 23 || ciMode == 26 || ciMode == 27 || ciMode == 28) {
    ciCheckpointing(nrs);
  }

  // only ciMode 1 exercises the particles path
  if (ciMode == 1) {
    particles->integrate(time);

    if (tstep <= 5) {
      overwriteParticleSolution(nrs, time);
    }
  }

